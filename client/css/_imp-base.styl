
// ====================================================

/* BASE */

// ====================================================

* 
  margin: 0

html 
  height: 100%
  font-size: 100%
  overflow-y: scroll
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body 
  height: 100%
  background-color: $color-light
  color: $color-font
  -webkit-text-size-adjust: 100%
  overflow-x: hidden
  padding: 0
  font-size: 1em
  font-weight: normal
  line-height: 20px
  margin: 0 0 0 0

//===================================================

// typography

h1 
  font-weight: normal

h2 
  font-weight: normal

//===================================================

// links

a 
  color: $color-font
  text-decoration: none

//===================================================

// lists

ul, ol 
  padding: 0 0 0 0
  list-style: none

//===================================================